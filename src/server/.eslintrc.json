{
    "env": {
        // "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [2, "tab"],
		"no-tabs": 0,
		"max-len": ["error", { "code": 120 }],
        "comma-dangle": ["error", "only-multiline"]
    }
}
